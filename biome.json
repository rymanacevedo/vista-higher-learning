{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
      "enabled": false,
      "clientKind": "git",
      "useIgnoreFile": false
    },
    "files": {
      "ignoreUnknown": false,
      "include": [
        "app/**/*.ts",
        "app/**/*.tsx",
        "app/**/*.js",
        "app/**/*.jsx",
        "app/**/*.css",
        "./biome.json",
        "./package.json",
        "./tsconfig.json",
        "./vite.config.ts"
      ],
      "ignore": [
        "node_modules",
        "dist",
        "build",
        ".next",
        ".cache",
        ".turbo",
        "**/node_modules/**",
        "bin"
      ]
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "ignore": [
        "node_modules",
        "docs",
        "dist",
        "public",
        "**/node_modules/**",
        "bin"
      ]
    },
    "organizeImports": {
      "enabled": true
    },
    "linter": {
      "enabled": true,
      "ignore": [
        "node_modules",
        "docs",
        "dist",
        "public",
        "**/node_modules/**",
        "bin"
      ],
      "rules": {
        "recommended": true,
        "style": {
          "noInferrableTypes": "off"
        },
        "a11y": {
          "noLabelWithoutControl": {
            "level": "error",
            "options": {
              "labelAttributes": ["label"],
              "labelComponents": ["Label"],
              "inputComponents": ["BaseAriaCheckbox"]
            }
          }
        }
      }
    },
    "javascript": {
      "formatter": {
        "quoteStyle": "single",
        "semicolons": "always"
      }
    },
    "css": {
      "formatter": {
        "quoteStyle": "single"
      }
    }
  }
  